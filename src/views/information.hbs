<div class="bg-light py-3">
        <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"> <a href="/products">Productos</a><span class="mx-2 mb-0">/</span> <strong class="text-black">{{ data.title }}</strong></div>
        </div>
        </div>
    </div> 

<div class="site-section">
  <br>
        <div class="container">
          <div class="row">
            <div class="col-md-6">
              <img src="{{ data.image }}" alt="Image" width="300px" class="img-fluid my-5 mx-5 rounded">
            </div>
            <div class="col-md-6">
              <h2 class="text-black">{{ data.title }}</h2>
              <p>{{ data.description }}</p>
              <p><strong class="text-primary h4">${{ data.price }}</strong></p>

              {{#if data.stock }}

                <p class="text-success h5"><strong>Disponibles: {{ data.stock }}</strong></p>    
                <div class="mb-5">
                <p><strong>Costo de Envio: $300</strong></p>        
                </div>
                <form action="/information/{{ data.id }}" method="post">
                <p><input type="submit" class="btn btn-primary" value="Agregar al Carrito"/></p>
</form>
              {{ else }}
                <p><div  class="btn btn-danger">Agotado</div></p>
              {{/if }}  
            </div>
          </div>
        </div>
      </div>